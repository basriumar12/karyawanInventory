<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="#b2dfdb"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:text="Nama :"
                android:id="@+id/idN"
                android:textSize="20dp"
                android:layout_width="120dp"
                android:layout_height="30dp" />


            <TextView
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/idN"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:text="Isi Nama"
                android:id="@+id/Nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Email :"
                    android:id="@+id/em"
                    android:layout_width="120dp"
                    android:layout_height="30dp" />
                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/em"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Isi Email"
                    android:id="@+id/emailll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Depelop :"
                    android:id="@+id/de"
                    android:layout_width="120dp"
                    android:layout_height="30dp" />
                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/de"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Isi Depelop"
                    android:id="@+id/dep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Perusahan :"
                    android:id="@+id/pe"
                    android:layout_width="120dp"
                    android:layout_height="30dp" />
                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/pe"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Isi Perusahan"
                    android:id="@+id/perusahannn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnEditData"
                    android:text="edit"
                    android:gravity="center_horizontal"
                    android:layout_width="100dp"
                    android:layout_height="40dp" />
                <Button
                    android:id="@+id/btnHapusData"
                    android:text="hapus"
                    android:gravity="center_horizontal"
                    android:layout_width="100dp"
                    android:layout_height="40dp" />
            </LinearLayout>

    </LinearLayout>

